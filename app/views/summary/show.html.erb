
<h2>
<%= @current_user.first_name.capitalize %>'s Summary of Workouts
</h2>

<h4>
<i class="fa-solid fa-dumbbell"></i> Total Number of Workouts Performed: <%= @workouts.count %>
</h4>
<h4>
<i class="fa-solid fa-calendar-week"></i> Number of Workouts Performed Last Week: <%= @list_of_workouts.where({ :date => (1.week.ago..Date.today) }).count %>
</h4>
<h4>
<i class="fa-solid fa-calendar-days"></i> Number of Workouts Performed Two Weeks Ago: <%= @list_of_workouts.where({ :date => (1.week.ago..Date.today) }).count %>
</h4>

<h4>
<i class="fa-solid fa-list-check"></i> Total Number of Exercises Performed: <%= @exercises.count %>
</h4>
<h4>
<i class="fa-solid fa-hammer"></i> Total Number of Reps Performed: <%= @current_user.exercises.sum(:reps) %>
</h4>
<h4>
<i class="fa-solid fa-calculator"></i> Total Number of Sets Performed: <%= @current_user.exercises.sum(:sets) %>
</h4>
<h4>
<i class="fa-solid fa-backward-fast"></i> Last Workout Date: <%= @list_of_workouts.at(0).date.strftime("%b %d, %Y") %>
</h4>


<hr>
<div>
  <div>
    <table border="1">
    <h2> All Workouts</h2>
      <tr>
 



        <th>
          Date
        </th>

        <th>
          Muscle Target
        </th>

        <th>
          Quality
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_workouts.each do |a_workout| %>
      <tr>

        <td>
          <%= a_workout.date.strftime("%m/%d/%Y") %>
        </td>

        <td>
          <%= a_workout.muscle_target %>
        </td>

        <td>
          <%= a_workout.quality %>
        </td>

        <td>
          <%= a_workout.location %>
        </td>

        <td>
          <%= time_ago_in_words(a_workout.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_workout.updated_at) %> ago
        </td>

        <td>
          <a href="/workouts/<%= a_workout.id %>">
            Show Details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
